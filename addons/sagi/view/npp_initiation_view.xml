<!-- sagi.npp_initiation -->
<!-- sagi.new_product_project -->
<!-- sagi.new_product_project -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sagi_npp_initiation_filter" model="ir.ui.view">
            <field name="name">sagi.npp_initiation.select</field>
            <field name="model">sagi.new_product_project</field>
            <field name="arch" type="xml">
                <search string="npp_initiation" version="7.0">
                    <group string="By Attribute">
                    <field name="reference" string="Reference"
                            />
                    <field name="name" string="Name"
                            />
                    <field name="agronomic_class" string="Agronomic Class"
                            />
                    <field name="next_action_responsible" string="Responsible"
                            />
                    <field name="project" string="Project"
                            />
                    <field name="phase" string="Phase"
                            />
                    <field name="operative_id" string="Operative"
                            />
                    </group>
                    <group string="By object">
                    <field name="related_product_ids" string="Related Products"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sagi_npp_initiation_form" model="ir.ui.view">
            <field name="name">sagi.npp_initiation.form</field>
            <field name="model">sagi.new_product_project</field>
            <field name="arch" type="xml">
                <form string="npp_initiation" version="7.0">
                    <header>
                    </header>
                    <sheet string="npp_initiation">
                     <group>
                        <field name="initiation_date_to_start"
                            />
                        <field name="initiation_date_to_end"
                            />
                        <field name="initiation_started_date"
                            />
                        <field name="initiation_end_date"
                            />
                        <field name="charter_file"
                            />
                        <field name="kick_off_ac_file"
                            />
                        <field name="ca_sc_file"
                            />
                        <field name="ca_sc_end_date"
                            />
                        <field name="ca_mtk_file"
                            />
                        <field name="ca_mtk_end_date"
                            />
                        <field name="ca_dr_file"
                            />
                        <field name="ca_dr_end_date"
                            />
                        <field name="ca_result_file"
                            />
                        <field name="ca_result_end_date"
                            />
                        <field name="reference"
                            />
                        <field name="name"
                            />
                        <field name="agronomic_class"
                            />
                        <field name="next_action_description"
                            />
                        <field name="next_action_date"
                            />
                        <field name="next_action_responsible"
                            />
                        <field name="project"
                            />
                        <field name="phase"
                            />
                        <field name="abort_file"
                            />
                        <field name="privacy_visibility"
                            />
                        <field name="operative_id"
                            />
                    <field name="status_report_ids"
                            />
                    <field name="related_product_ids"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sagi_npp_initiation_tree" model="ir.ui.view">
            <field name="name">sagi.npp_initiation.tree</field>
            <field name="model">sagi.new_product_project</field>
            <field name="arch" type="xml">
                <tree string="npp_initiation"
                    >
                    <field name="ca_result_end_date"
                        />
                    <field name="reference"
                        />
                    <field name="name"
                        />
                    <field name="agronomic_class"
                        />
                    <field name="next_action_responsible"
                        />
                    <field name="phase"
                        />
                    <field name="operative_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
