<!-- sagi.status_report -->
<!-- sagi.status_report -->
<!-- sagi.status_report -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sagi_status_report_filter" model="ir.ui.view">
            <field name="name">sagi.status_report.select</field>
            <field name="model">sagi.status_report</field>
            <field name="arch" type="xml">
                <search string="Status Reports" version="7.0">
                    <group string="By Attribute">
                    <field name="date" string="Date"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sagi_status_report_form" model="ir.ui.view">
            <field name="name">sagi.status_report.form</field>
            <field name="model">sagi.status_report</field>
            <field name="arch" type="xml">
                <form string="Status Reports" version="7.0">
                    <header>
                    </header>
                    <sheet string="Status Reports">
                     <group>
                        <field name="date"
                            />
                        <field name="report"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sagi_status_report_tree" model="ir.ui.view">
            <field name="name">sagi.status_report.tree</field>
            <field name="model">sagi.status_report</field>
            <field name="arch" type="xml">
                <tree string="Status Reports"
                    >
                    <field name="date"
                        />
                    <field name="report"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
