<openerp>
    <data>

        <!-- INHERITED FORM -->
        <record id="view_sgr_product_form" model="ir.ui.view">
            <field name="name">sgr.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="sgr.view_sgr_product_form"/>
            <field name="arch" type="xml">
   
                <field name="type" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
                </field>      
                <field name="list_price" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
                </field>             
                <page string="Procurements" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
                </page>      
                <page string="Sales" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
                </page>        
                <page string="Accounting" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
                </page>      
                        <div name="buttons" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>                        
                        </div>
                                                                   
            </field>
        </record>

        <record id="view_sgr_product_form2" model="ir.ui.view">
            <field name="name">sgr.product.form2</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product_expiry.view_product_form_expiry"/>
            <field name="arch" type="xml">
                <group string="Dates" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
                </group>      
           
            </field>
        </record>

        <record id="view_sgr_product_form3" model="ir.ui.view">
            <field name="name">sgr.product.form3</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_normal_procurement_locations_form"/>
            <field name="arch" type="xml">
                <group name="store" position="replace">
                </group>      
           
            </field>
        </record>


        <record id="view_category_property_form" model="ir.ui.view">
            <field name="name">product.category.stock.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="stock.view_category_property_form"/>
            <field name="arch" type="xml">
                <data>
                        <group name="account_stock_property" position="replace"/>
                </data>
            </field>
        </record>        
        

        <!-- INHERITED TREE
        <record id="view_sgr_product_tree" model="ir.ui.view">
            <field name="name">sgr.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <tree position="inside">
                    <field name="type"/>
                </tree>
            </field>
        </record>
 -->

    </data>
</openerp>
