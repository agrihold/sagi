            <field name="arch" type="xml">
                <xpath expr="//page[@string='Accounting']" position="attributes">
                    <attribute name="groups">"base.group_no_one"</attribute>
<!--                    <attribute name="invisible">True</attribute>-->
                </xpath>
            </field>
       </record>    



