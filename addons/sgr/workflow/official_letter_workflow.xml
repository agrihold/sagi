<!-- sgr.official_letter -->
<!-- sgr.official_letter -->
<!-- sgr.official_letter -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="official_letter_official_letter_wkf" model="workflow">
            <field name="name">sgr.official_letter.official_letter</field>
            <field name="osv">sgr.official_letter</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_12AD_22D2" model="workflow.activity">
            <field name="wkf_id" ref="official_letter_official_letter_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AD_22D3" model="workflow.activity">
            <field name="wkf_id" ref="official_letter_official_letter_wkf"/>
            <field name="name">Sent</field>
            <field name="action">
                write({'state':'sent'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AD_22D4" model="workflow.activity">
            <field name="wkf_id" ref="official_letter_official_letter_wkf"/>
            <field name="name">Received</field>
            <field name="action">
                write({'state':'received'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AD_22D6" model="workflow.activity">
            <field name="wkf_id" ref="official_letter_official_letter_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_12AD_22D8" model="workflow.transition">
            <field name="act_from" ref="a_12AD_22D2"/>
            <field name="act_to" ref="a_12AD_22D3"/>
            <field name="signal">sgn_send</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AD_22D9" model="workflow.transition">
            <field name="act_from" ref="a_12AD_22D3"/>
            <field name="act_to" ref="a_12AD_22D4"/>
            <field name="signal">sgn_receive</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AD_22DE" model="workflow.transition">
            <field name="act_from" ref="a_12AD_22D6"/>
            <field name="act_to" ref="a_12AD_22D2"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AD_22DF" model="workflow.transition">
            <field name="act_from" ref="a_12AD_22D4"/>
            <field name="act_to" ref="a_12AD_22D6"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AD_22E0" model="workflow.transition">
            <field name="act_from" ref="a_12AD_22D3"/>
            <field name="act_to" ref="a_12AD_22D6"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AD_1776" model="workflow.transition">
            <field name="act_from" ref="a_12AD_22D2"/>
            <field name="act_to" ref="a_12AD_22D6"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
