<!-- sgr.dossier_document -->
<!-- sgr.dossier_document -->
<!-- sgr.document -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="dossier_document_dossier_document_wkf" model="workflow">
            <field name="name">sgr.dossier_document.dossier_document</field>
            <field name="osv">sgr.dossier_document</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_11D5_1624" model="workflow.activity">
            <field name="wkf_id" ref="dossier_document_dossier_document_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_11D5_1629" model="workflow.activity">
            <field name="wkf_id" ref="dossier_document_dossier_document_wkf"/>
            <field name="name">Approved</field>
            <field name="action">
                write({'state':'approved'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_11D5_22B7" model="workflow.activity">
            <field name="wkf_id" ref="dossier_document_dossier_document_wkf"/>
            <field name="name">Depreciated</field>
            <field name="action">
                write({'state':'depreciated'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_11D5_162A" model="workflow.activity">
            <field name="wkf_id" ref="dossier_document_dossier_document_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_11D5_162D" model="workflow.transition">
            <field name="act_from" ref="a_11D5_1624"/>
            <field name="act_to" ref="a_11D5_1629"/>
            <field name="signal">sgn_approve</field>
            <field name="condition">True</field>
        </record>
        <record id="t_11D5_162E" model="workflow.transition">
            <field name="act_from" ref="a_11D5_1624"/>
            <field name="act_to" ref="a_11D5_162A"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_11D5_1653" model="workflow.transition">
            <field name="act_from" ref="a_11D5_1629"/>
            <field name="act_to" ref="a_11D5_162A"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_11D5_22B6" model="workflow.transition">
            <field name="act_from" ref="a_11D5_162A"/>
            <field name="act_to" ref="a_11D5_1624"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_11D5_22B8" model="workflow.transition">
            <field name="act_from" ref="a_11D5_1629"/>
            <field name="act_to" ref="a_11D5_22B7"/>
            <field name="signal">sgn_depreciate</field>
            <field name="condition">True</field>
        </record>
        <record id="t_11D5_22BD" model="workflow.transition">
            <field name="act_from" ref="a_11D5_22B7"/>
            <field name="act_to" ref="a_11D5_162A"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
