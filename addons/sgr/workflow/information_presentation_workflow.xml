<!-- sgr.information_presentation -->
<!-- sgr.information_presentation -->
<!-- sgr.information_presentation -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="information_presentation_information_presentation_wkf" model="workflow">
            <field name="name">sgr.information_presentation.information_presentation</field>
            <field name="osv">sgr.information_presentation</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_117C_22C2" model="workflow.activity">
            <field name="wkf_id" ref="information_presentation_information_presentation_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_117C_22C4" model="workflow.activity">
            <field name="wkf_id" ref="information_presentation_information_presentation_wkf"/>
            <field name="name">Approved</field>
            <field name="action">
                write({'state':'approved'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_117C_22C8" model="workflow.activity">
            <field name="wkf_id" ref="information_presentation_information_presentation_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_117C_22C5" model="workflow.transition">
            <field name="act_from" ref="a_117C_22C2"/>
            <field name="act_to" ref="a_117C_22C4"/>
            <field name="signal">sgn_approve</field>
            <field name="condition">True</field>
        </record>
        <record id="t_117C_22C9" model="workflow.transition">
            <field name="act_from" ref="a_117C_22C4"/>
            <field name="act_to" ref="a_117C_22C8"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_117C_22CA" model="workflow.transition">
            <field name="act_from" ref="a_117C_22C2"/>
            <field name="act_to" ref="a_117C_22C8"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_117C_22CB" model="workflow.transition">
            <field name="act_from" ref="a_117C_22C8"/>
            <field name="act_to" ref="a_117C_22C2"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
