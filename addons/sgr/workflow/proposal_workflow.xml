<!-- sgr.proposal -->
<!-- sgr.proposal -->
<!-- sgr.proposal -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="proposal_proposal_wkf" model="workflow">
            <field name="name">sgr.proposal.proposal</field>
            <field name="osv">sgr.proposal</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_0FF0_22E8" model="workflow.activity">
            <field name="wkf_id" ref="proposal_proposal_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_0FF0_22EA" model="workflow.activity">
            <field name="wkf_id" ref="proposal_proposal_wkf"/>
            <field name="name">Requested</field>
            <field name="action">
                write({'state':'requested'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_0FF0_22ED" model="workflow.activity">
            <field name="wkf_id" ref="proposal_proposal_wkf"/>
            <field name="name">Received</field>
            <field name="action">
                write({'state':'received'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_0FF0_22EC" model="workflow.activity">
            <field name="wkf_id" ref="proposal_proposal_wkf"/>
            <field name="name">Approved</field>
            <field name="action">approve_proposal()</field>
            <field name="kind">function</field>
        </record>
        <record id="a_0FF0_22EE" model="workflow.activity">
            <field name="wkf_id" ref="proposal_proposal_wkf"/>
            <field name="name">Done</field>
            <field name="action">
                write({'state':'done'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_0FF0_22EF" model="workflow.activity">
            <field name="wkf_id" ref="proposal_proposal_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_0FF0_22EB" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22E8"/>
            <field name="act_to" ref="a_0FF0_22EA"/>
            <field name="signal">sgn_request</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_22F0" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22E8"/>
            <field name="act_to" ref="a_0FF0_22EF"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_22F1" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22EF"/>
            <field name="act_to" ref="a_0FF0_22E8"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_22F2" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22EA"/>
            <field name="act_to" ref="a_0FF0_22ED"/>
            <field name="signal">sgn_receive</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_22F3" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22ED"/>
            <field name="act_to" ref="a_0FF0_22EC"/>
            <field name="signal">sgn_approve</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_22F4" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22EC"/>
            <field name="act_to" ref="a_0FF0_22EE"/>
            <field name="signal">sgn_set_done</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_4BD6" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22EA"/>
            <field name="act_to" ref="a_0FF0_22EF"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_4BD7" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22ED"/>
            <field name="act_to" ref="a_0FF0_22EF"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_4BD8" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22EC"/>
            <field name="act_to" ref="a_0FF0_22EF"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_0FF0_4BD9" model="workflow.transition">
            <field name="act_from" ref="a_0FF0_22EE"/>
            <field name="act_to" ref="a_0FF0_22EF"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
