<!-- sgr.formulated_product_registry -->
<!-- sgr.formulated_product_registry -->
<!-- sgr.registry -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="formulated_product_registry_registry_wkf" model="workflow">
            <field name="name">sgr.formulated_product_registry.registry</field>
            <field name="osv">sgr.formulated_product_registry</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_1080_2300" model="workflow.activity">
            <field name="wkf_id" ref="formulated_product_registry_registry_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_1080_2301" model="workflow.activity">
            <field name="wkf_id" ref="formulated_product_registry_registry_wkf"/>
            <field name="name">Requested</field>
            <field name="action">
                write({'state':'requested'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_1080_2304" model="workflow.activity">
            <field name="wkf_id" ref="formulated_product_registry_registry_wkf"/>
            <field name="name">Approved</field>
            <field name="action">
                write({'state':'approved'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_1080_2306" model="workflow.activity">
            <field name="wkf_id" ref="formulated_product_registry_registry_wkf"/>
            <field name="name">Rejected</field>
            <field name="action">
                write({'state':'rejected'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_1080_2308" model="workflow.activity">
            <field name="wkf_id" ref="formulated_product_registry_registry_wkf"/>
            <field name="name">Depreciated</field>
            <field name="action">
                write({'state':'depreciated'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_1080_2307" model="workflow.activity">
            <field name="wkf_id" ref="formulated_product_registry_registry_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_1080_2302" model="workflow.transition">
            <field name="act_from" ref="a_1080_2300"/>
            <field name="act_to" ref="a_1080_2301"/>
            <field name="signal">sgn_request</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_2305" model="workflow.transition">
            <field name="act_from" ref="a_1080_2301"/>
            <field name="act_to" ref="a_1080_2304"/>
            <field name="signal">sgn_approve</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_230B" model="workflow.transition">
            <field name="act_from" ref="a_1080_2304"/>
            <field name="act_to" ref="a_1080_2308"/>
            <field name="signal">sgn_depreciate</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_230E" model="workflow.transition">
            <field name="act_from" ref="a_1080_2301"/>
            <field name="act_to" ref="a_1080_2306"/>
            <field name="signal">sgn_reject</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_2310" model="workflow.transition">
            <field name="act_from" ref="a_1080_2306"/>
            <field name="act_to" ref="a_1080_2307"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_2312" model="workflow.transition">
            <field name="act_from" ref="a_1080_2304"/>
            <field name="act_to" ref="a_1080_2307"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_2313" model="workflow.transition">
            <field name="act_from" ref="a_1080_2308"/>
            <field name="act_to" ref="a_1080_2307"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_2314" model="workflow.transition">
            <field name="act_from" ref="a_1080_2307"/>
            <field name="act_to" ref="a_1080_2300"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_1080_243F" model="workflow.transition">
            <field name="act_from" ref="a_1080_2301"/>
            <field name="act_to" ref="a_1080_2307"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
