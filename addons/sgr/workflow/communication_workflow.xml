<!-- sgr.communication -->
<!-- sgr.communication -->
<!-- sgr.communication -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="communication_communication_wkf" model="workflow">
            <field name="name">sgr.communication.communication</field>
            <field name="osv">sgr.communication</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_12AC_2441" model="workflow.activity">
            <field name="wkf_id" ref="communication_communication_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AC_2444" model="workflow.activity">
            <field name="wkf_id" ref="communication_communication_wkf"/>
            <field name="name">Sent</field>
            <field name="action">
                write({'state':'sent'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AC_2442" model="workflow.activity">
            <field name="wkf_id" ref="communication_communication_wkf"/>
            <field name="name">Received</field>
            <field name="action">
                write({'state':'received'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AC_2445" model="workflow.activity">
            <field name="wkf_id" ref="communication_communication_wkf"/>
            <field name="name">Resolving Request</field>
            <field name="action">
                write({'state':'resolving_request'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AC_248E" model="workflow.activity">
            <field name="wkf_id" ref="communication_communication_wkf"/>
            <field name="name">Resolved</field>
            <field name="action">
                write({'state':'resolved'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_12AC_2443" model="workflow.activity">
            <field name="wkf_id" ref="communication_communication_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_12AC_2448" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2441"/>
            <field name="act_to" ref="a_12AC_2444"/>
            <field name="signal">sgn_send</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_2449" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2444"/>
            <field name="act_to" ref="a_12AC_2442"/>
            <field name="signal">sgn_receive</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_244A" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2444"/>
            <field name="act_to" ref="a_12AC_2443"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_244B" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2442"/>
            <field name="act_to" ref="a_12AC_2443"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_244D" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2445"/>
            <field name="act_to" ref="a_12AC_248E"/>
            <field name="signal">sgn_close</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_24A0" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2443"/>
            <field name="act_to" ref="a_12AC_2441"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_24A3" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2445"/>
            <field name="act_to" ref="a_12AC_2443"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_24A4" model="workflow.transition">
            <field name="act_from" ref="a_12AC_248E"/>
            <field name="act_to" ref="a_12AC_2443"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_2DC3" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2444"/>
            <field name="act_to" ref="a_12AC_2445"/>
            <field name="signal">sgn_need_answer</field>
            <field name="condition">True</field>
        </record>
        <record id="t_12AC_7EBA" model="workflow.transition">
            <field name="act_from" ref="a_12AC_2441"/>
            <field name="act_to" ref="a_12AC_2443"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
