<!-- sgr.sample_request -->
<!-- sgr.sample_request -->
<!-- sgr.sample_request -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="sample_request_sample_request_wkf" model="workflow">
            <field name="name">sgr.sample_request.sample_request</field>
            <field name="osv">sgr.sample_request</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_2096_20D4" model="workflow.activity">
            <field name="wkf_id" ref="sample_request_sample_request_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_2096_20D5" model="workflow.activity">
            <field name="wkf_id" ref="sample_request_sample_request_wkf"/>
            <field name="name">Requested</field>
            <field name="action">
                write({'state':'requested'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_2096_20D7" model="workflow.activity">
            <field name="wkf_id" ref="sample_request_sample_request_wkf"/>
            <field name="name">Done</field>
            <field name="action">
                write({'state':'done'})
            </field>
            <field name="kind">function</field>
        </record>
        <record id="a_2096_20D9" model="workflow.activity">
            <field name="wkf_id" ref="sample_request_sample_request_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">
                write({'state':'cancelled'})
            </field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_2096_20D6" model="workflow.transition">
            <field name="act_from" ref="a_2096_20D4"/>
            <field name="act_to" ref="a_2096_20D5"/>
            <field name="signal">sgn_request</field>
            <field name="condition">True</field>
        </record>
        <record id="t_2096_20D8" model="workflow.transition">
            <field name="act_from" ref="a_2096_20D5"/>
            <field name="act_to" ref="a_2096_20D7"/>
            <field name="signal">sgn_set_done</field>
            <field name="condition">True</field>
        </record>
        <record id="t_2096_20DA" model="workflow.transition">
            <field name="act_from" ref="a_2096_20D4"/>
            <field name="act_to" ref="a_2096_20D9"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_2096_20DB" model="workflow.transition">
            <field name="act_from" ref="a_2096_20D9"/>
            <field name="act_to" ref="a_2096_20D4"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_2096_20DC" model="workflow.transition">
            <field name="act_from" ref="a_2096_20D5"/>
            <field name="act_to" ref="a_2096_20D9"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_2096_20DD" model="workflow.transition">
            <field name="act_from" ref="a_2096_20D7"/>
            <field name="act_to" ref="a_2096_20D9"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
