<!-- sgr.ingredient -->
<!-- sgr.ingredient -->
<!-- sgr.ingredient -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_ingredient_filter" model="ir.ui.view">
            <field name="name">sgr.ingredient.select</field>
            <field name="model">sgr.ingredient</field>
            <field name="arch" type="xml">
                <search string="Ingredients" version="7.0">
                    <group string="By Attribute">
                    <field name="type" string="Ingredient Type"
                            />
                    <field name="common_international_name" string="Common International Name"
                            />
                    <field name="name" string="Common Name"
                            />
                    <field name="cas" string="CAS Number"
                            />
                    <field name="synonymy" string="Synonymy"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_ingredient_form" model="ir.ui.view">
            <field name="name">sgr.ingredient.form</field>
            <field name="model">sgr.ingredient</field>
            <field name="arch" type="xml">
                <form string="Ingredients" version="7.0">
                    <header>
                    </header>
                    <sheet string="Ingredients">
                     <group>
                        <field name="type"
                            />
                        <field name="common_international_name"
                            />
                        <field name="name"
                            />
                        <field name="scientific_name"
                            />
                        <field name="cas"
                            />
                        <field name="molecular_formula"
                            />
                        <field name="chemical_structure"
                            />
                        <field name="molecular_weight"
                            />
                        <field name="mol_weight_uom_id"
                            />
                        <field name="density"
                            />
                        <field name="density_uom_id"
                            />
                        <field name="solubility"
                            />
                        <field name="solubility_uom_id"
                            />
                        <field name="synonymy"
                            />
                        <field name="note"
                            />
                    <field name="ingredient_group_id"
                            />
                    <field name="agronomic_class_id"
                            />
                    <field name="ingredient_other_name_ids"
                            />
                    <field name="mode_of_action_ids"
                            />
                    <field name="lmr_ids"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_ingredient_tree" model="ir.ui.view">
            <field name="name">sgr.ingredient.tree</field>
            <field name="model">sgr.ingredient</field>
            <field name="arch" type="xml">
                <tree string="Ingredients"
                    >
                    <field name="type"
                        />
                    <field name="common_international_name"
                        />
                    <field name="name"
                        />
                    <field name="scientific_name"
                        />
                    <field name="cas"
                        />
                    <field name="synonymy"
                        />
                    <field name="agronomic_class_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
