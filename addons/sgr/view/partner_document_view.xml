<!-- sgr.partner_document -->
<!-- sgr.partner_document -->
<!-- sgr.document -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_partner_document_filter" model="ir.ui.view">
            <field name="name">sgr.partner_document.select</field>
            <field name="model">sgr.partner_document</field>
            <field name="arch" type="xml">
                <search string="Partner Documents" version="7.0">
                    <group string="By Attribute">
                    <field name="partner_id" string="Partner"
                            />
                    <field name="name" string="Name"
                            />
                    <field name="reference" string="Reference"
                            />
                    </group>
                    <group string="By object">
                    <field name="document_category_id" string="Category"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_partner_document_form" model="ir.ui.view">
            <field name="name">sgr.partner_document.form</field>
            <field name="model">sgr.partner_document</field>
            <field name="arch" type="xml">
                <form string="Partner Documents" version="7.0">
                    <header>
                        <button name="sgn_approve"
                            states="draft"
                            string="Approve"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_depreciate"
                            states="approved"
                            string="Depreciate"
                            />
                        <button name="action_wfk_set_cancelled"
                            type="object"
                            states="approved,depreciated,draft"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Partner Documents">
                     <group>
                        <field name="partner_id"
                            />
                        <field name="name"
                            />
                        <field name="reference"
                            />
                        <field name="reviser_id"
                            />
                        <field name="approval_date"
                            />
                        <field name="expiration_date"
                            />
                        <field name="note"
                            />
                        <field name="company_id"
                            />
                        <field name="number_of_pages"
                            />
                        <field name="consularization_date"
                            />
                        <field name="translation_date"
                            />
                        <field name="authentication_date"
                            />
                        <field name="issue_date"
                            />
                    <field name="document_category_id"
                            />
                    <field name="partner_document_presentation_ids"
                            />
                    <field name="replace_ids"
                            />
                    <field name="replaced_by_id"
                            />
                    <field name="move_ids"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_partner_document_tree" model="ir.ui.view">
            <field name="name">sgr.partner_document.tree</field>
            <field name="model">sgr.partner_document</field>
            <field name="arch" type="xml">
                <tree string="Partner Documents"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('cancelled', 'approved'); red:state in ()"
                    >
                    <field name="partner_id"
                        />
                    <field name="name"
                        />
                    <field name="reference"
                        />
                    <field name="expiration_date"
                        />
                    <field name="number_of_pages"
                        />
                    <field name="document_category_id"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
