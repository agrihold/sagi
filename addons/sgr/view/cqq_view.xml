<!-- sgr.cqq -->
<!-- sgr.cqq -->
<!-- sgr.cqq -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_cqq_filter" model="ir.ui.view">
            <field name="name">sgr.cqq.select</field>
            <field name="model">sgr.cqq</field>
            <field name="arch" type="xml">
                <search string="CQQ" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    <field name="scientific_name" string="IUPAC/Scientific Name"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_cqq_form" model="ir.ui.view">
            <field name="name">sgr.cqq.form</field>
            <field name="model">sgr.cqq</field>
            <field name="arch" type="xml">
                <form string="CQQ" version="7.0">
                    <header>
                    </header>
                    <sheet string="CQQ">
                     <group>
                        <field name="declared_concentration"
                            />
                        <field name="min_concentration"
                            />
                        <field name="max_concentration"
                            />
                        <field name="uom_id"
                            />
                        <field name="main_ingredient"
                            />
                    <field name="ingredient_function_id"
                            />
                    <field name="ingredient_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_cqq_tree" model="ir.ui.view">
            <field name="name">sgr.cqq.tree</field>
            <field name="model">sgr.cqq</field>
            <field name="arch" type="xml">
                <tree string="CQQ"
                    >
                    <field name="declared_concentration"
                        />
                    <field name="min_concentration"
                        />
                    <field name="max_concentration"
                        />
                    <field name="main_ingredient"
                        />
                    <field name="ingredient_id"
                        />
                    <field name="scientific_name"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
