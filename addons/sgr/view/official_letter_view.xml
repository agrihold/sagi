<!-- sgr.official_letter -->
<!-- sgr.official_letter -->
<!-- sgr.official_letter -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_official_letter_filter" model="ir.ui.view">
            <field name="name">sgr.official_letter.select</field>
            <field name="model">sgr.official_letter</field>
            <field name="arch" type="xml">
                <search string="Official Letters" version="7.0">
                    <group string="By Attribute">
                    <field name="government_agency_id" string="Government Agency"
                            />
                    <field name="issue_date" string="Issue Date"
                            />
                    <field name="tracking_number" string="Tracking Number"
                            />
                    <field name="protocol" string="Protocol"
                            />
                    <field name="protocol_date" string="Protocol Date"
                            />
                    </group>
                    <group string="By object">
                    <field name="shipping_method_id" string="Shipping Method"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_official_letter_form" model="ir.ui.view">
            <field name="name">sgr.official_letter.form</field>
            <field name="model">sgr.official_letter</field>
            <field name="arch" type="xml">
                <form string="Official Letters" version="7.0">
                    <header>
                        <button name="sgn_send"
                            states="draft"
                            string="Send"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_receive"
                            states="sent"
                            string="Receive"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="draft,received,sent"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Official Letters">
                     <group>
                        <field name="name"
                            />
                        <field name="direction"
                            />
                        <field name="government_agency_id"
                            />
                        <field name="contact"
                            />
                        <field name="issue_date"
                            />
                        <field name="delivery_date"
                            />
                        <field name="user"
                            />
                        <field name="tracking_number"
                            />
                        <field name="protocol"
                            />
                        <field name="protocol_date"
                            />
                        <field name="company_id"
                            />
                    <field name="shipping_method_id"
                            />
                    <field name="comunication_ids"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_official_letter_tree" model="ir.ui.view">
            <field name="name">sgr.official_letter.tree</field>
            <field name="model">sgr.official_letter</field>
            <field name="arch" type="xml">
                <tree string="Official Letters"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('received', 'sent'); red:state in ()"
                    >
                    <field name="name"
                        />
                    <field name="direction"
                        />
                    <field name="government_agency_id"
                        />
                    <field name="issue_date"
                        />
                    <field name="delivery_date"
                        />
                    <field name="tracking_number"
                        />
                    <field name="protocol_date"
                        />
                    <field name="shipping_method_id"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
