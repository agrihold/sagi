<!-- sgr.registry_process -->
<!-- sgr.registry_process -->
<!-- sgr.registry_process -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_registry_process_filter" model="ir.ui.view">
            <field name="name">sgr.registry_process.select</field>
            <field name="model">sgr.registry_process</field>
            <field name="arch" type="xml">
                <search string="Registry Processes" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Number"
                            />
                    <field name="government_agency_id" string="Government Agency"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_registry_process_form" model="ir.ui.view">
            <field name="name">sgr.registry_process.form</field>
            <field name="model">sgr.registry_process</field>
            <field name="arch" type="xml">
                <form string="Registry Processes" version="7.0">
                    <header>
                        <button name="sgn_request"
                            states="draft"
                            string="Request"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_approve"
                            states="requested"
                            string="Approve"
                            class="oe_highlight"
                            />
                        <button name="sgn_reject"
                            states="requested"
                            string="Reject"
                            />
                        <button name="sgn_depreciate"
                            states="approved"
                            string="Depreciate"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="approved,depreciated,draft,rejected,requested"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Registry Processes">
                     <group>
                        <field name="name"
                            />
                        <field name="petitioning_number"
                            />
                        <field name="government_agency_id"
                            />
                        <field name="open_official_letter_id"
                            />
                        <field name="close_official_letter_id"
                            />
                        <field name="open_date"
                            />
                        <field name="expected_date"
                            />
                        <field name="close_date"
                            />
                        <field name="label_expected_date"
                            />
                        <field name="label_approval_date"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_registry_process_tree" model="ir.ui.view">
            <field name="name">sgr.registry_process.tree</field>
            <field name="model">sgr.registry_process</field>
            <field name="arch" type="xml">
                <tree string="Registry Processes"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('requested', 'depreciated', 'approved', 'rejected'); red:state in ()"
                    >
                    <field name="name"
                        />
                    <field name="petitioning_number"
                        />
                    <field name="government_agency_id"
                        />
                    <field name="open_official_letter_id"
                        />
                    <field name="close_official_letter_id"
                        />
                    <field name="open_date"
                        />
                    <field name="expected_date"
                        />
                    <field name="close_date"
                        />
                    <field name="label_expected_date"
                        />
                    <field name="label_approval_date"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
