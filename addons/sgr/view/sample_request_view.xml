<!-- sgr.sample_request -->
<!-- sgr.sample_request -->
<!-- sgr.sample_request -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_sample_request_filter" model="ir.ui.view">
            <field name="name">sgr.sample_request.select</field>
            <field name="model">sgr.sample_request</field>
            <field name="arch" type="xml">
                <search string="Sample Request" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Reference"
                            />
                    <field name="concentration" string="Concentration"
                            />
                    <field name="concentration_uom_id" string="UOM"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_sample_request_form" model="ir.ui.view">
            <field name="name">sgr.sample_request.form</field>
            <field name="model">sgr.sample_request</field>
            <field name="arch" type="xml">
                <form string="Sample Request" version="7.0">
                    <header>
                        <button name="sgn_request"
                            states="draft"
                            string="Request"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_set_done"
                            states="requested"
                            string="Set Done"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="done,draft,requested"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Sample Request">
                     <group>
                        <field name="name"
                            />
                        <field name="product_id"
                            />
                        <field name="supplier_id"
                            />
                        <field name="amount"
                            />
                        <field name="amount_uom_id"
                            />
                        <field name="concentration"
                            />
                        <field name="concentration_uom_id"
                            />
                        <field name="import_license"
                            />
                        <field name="date_of_import_license"
                            />
                        <field name="expiration_date_of_import"
                            />
                        <field name="deadline"
                            />
                        <field name="departure"
                            />
                        <field name="note"
                            />
                        <field name="location_id"
                            />
                        <field name="specific_batch"
                            />
                        <field name="batch"
                            />
                    <field name="product_in_ret_id"
                            />
                    <field name="packaging_ids"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_sample_request_tree" model="ir.ui.view">
            <field name="name">sgr.sample_request.tree</field>
            <field name="model">sgr.sample_request</field>
            <field name="arch" type="xml">
                <tree string="Sample Request"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('requested', 'done'); red:state in ()"
                    >
                    <field name="name"
                        />
                    <field name="product_id"
                        />
                    <field name="amount"
                        />
                    <field name="amount_uom_id"
                        />
                    <field name="concentration"
                        />
                    <field name="concentration_uom_id"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
