<!-- sgr.proposal_product -->
<!-- sgr.proposal_product -->
<!-- sgr.proposal_product -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_proposal_product_filter" model="ir.ui.view">
            <field name="name">sgr.proposal_product.select</field>
            <field name="model">sgr.proposal_product</field>
            <field name="arch" type="xml">
                <search string="Proposal Products" version="7.0">
                    <group string="By Attribute">
                    <field name="product_id" string="Product"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_proposal_product_form" model="ir.ui.view">
            <field name="name">sgr.proposal_product.form</field>
            <field name="model">sgr.proposal_product</field>
            <field name="arch" type="xml">
                <form string="Proposal Products" version="7.0">
                    <header>
                    </header>
                    <sheet string="Proposal Products">
                     <group>
                        <field name="product_id"
                            />
                        <field name="sub_total"
                            />
                    <field name="product_study_ids"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_proposal_product_tree" model="ir.ui.view">
            <field name="name">sgr.proposal_product.tree</field>
            <field name="model">sgr.proposal_product</field>
            <field name="arch" type="xml">
                <tree string="Proposal Products"
                    >
                    <field name="product_id"
                        />
                    <field name="sub_total"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
