<!-- sgr.contract -->
<!-- sgr.contract -->
<!-- sgr.contract -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_contract_filter" model="ir.ui.view">
            <field name="name">sgr.contract.select</field>
            <field name="model">sgr.contract</field>
            <field name="arch" type="xml">
                <search string="Contracts" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Reference"
                            />
                    <field name="laboratory_id" string="Laboratory"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_contract_form" model="ir.ui.view">
            <field name="name">sgr.contract.form</field>
            <field name="model">sgr.contract</field>
            <field name="arch" type="xml">
                <form string="Contracts" version="7.0">
                    <header>
                        <button name="sgn_request"
                            states="draft"
                            string="Request"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_receive"
                            states="requested"
                            string="Receive"
                            class="oe_highlight"
                            />
                        <button name="sgn_approve"
                            states="received"
                            string="Approve"
                            class="oe_highlight"
                            />
                        <button name="sgn_close"
                            states="approved"
                            string="Close"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="approved,draft,received,requested,solved"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Contracts">
                     <group>
                        <field name="date"
                            />
                        <field name="name"
                            />
                        <field name="laboratory_id"
                            />
                        <field name="amount"
                            />
                        <field name="currency_id"
                            />
                        <field name="payment_information"
                            />
                        <field name="observations"
                            />
                        <field name="company_id"
                            />
                        <field name="document_id"
                            />
                    <field name="payment_term_id"
                            />
                    <field name="analytic_account_id"
                            />
                    <field name="proposal_ids"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_contract_tree" model="ir.ui.view">
            <field name="name">sgr.contract.tree</field>
            <field name="model">sgr.contract</field>
            <field name="arch" type="xml">
                <tree string="Contracts"
                    fonts="bold:message_unread==True"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('requested', 'received', 'approved', 'solved'); red:state in ()"
                    >
                    <field name="message_unread" invisible="1"/>
                    <field name="date"
                        />
                    <field name="name"
                        />
                    <field name="laboratory_id"
                        />
                    <field name="amount"
                        />
                    <field name="currency_id"
                        />
                    <field name="payment_information"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
