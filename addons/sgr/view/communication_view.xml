<!-- sgr.communication -->
<!-- sgr.communication -->
<!-- sgr.communication -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_communication_filter" model="ir.ui.view">
            <field name="name">sgr.communication.select</field>
            <field name="model">sgr.communication</field>
            <field name="arch" type="xml">
                <search string="Communications" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"
                            />
                    <field name="term_date" string="Term Date"
                            />
                    </group>
                    <group string="By object">
                    <field name="communication_type_id" string="Type"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_communication_form" model="ir.ui.view">
            <field name="name">sgr.communication.form</field>
            <field name="model">sgr.communication</field>
            <field name="arch" type="xml">
                <form string="Communications" version="7.0">
                    <header>
                        <button name="sgn_send"
                            states="draft"
                            string="Send"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_receive"
                            states="sent"
                            string="Receive"
                            class="oe_highlight"
                            />
                        <button name="sgn_need_answer"
                            states="sent"
                            string="Need Answer"
                            class="oe_highlight"
                            />
                        <button name="sgn_close"
                            states="resolving_request"
                            string="Close"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="draft,received,resolved,resolving_request,sent"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Communications">
                     <group>
                        <field name="date"
                            />
                        <field name="direction"
                            />
                        <field name="name"
                            />
                        <field name="government_agency_id"
                            />
                        <field name="term_date"
                            />
                        <field name="note"
                            />
                        <field name="company_id"
                            />
                    <field name="registry_id"
                            />
                    <field name="tax_ids"
                            />
                    <field name="dossier_document_ids"
                            />
                    <field name="study_presentation_ids"
                            domain="[('registry_id','=',registry_id), ('state','=','approved')]"
                            />
                    <field name="official_letter_id"
                            />
                    <field name="communication_type_id"
                            />
                    <field name="partner_document_presentation_ids"
                            domain="[('registry_id','=',registry_id), ('state','=','approved')]"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_communication_tree" model="ir.ui.view">
            <field name="name">sgr.communication.tree</field>
            <field name="model">sgr.communication</field>
            <field name="arch" type="xml">
                <tree string="Communications"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('resolved', 'received', 'resolving_request', 'sent'); red:state in ()"
                    >
                    <field name="date"
                        />
                    <field name="direction"
                        />
                    <field name="name"
                        />
                    <field name="government_agency_id"
                        />
                    <field name="term_date"
                        />
                    <field name="official_letter_id"
                        />
                    <field name="communication_type_id"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
