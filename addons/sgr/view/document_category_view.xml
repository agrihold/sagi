<!-- sgr.document_category -->
<!-- sgr.document_category -->
<!-- sgr.document_category -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_document_category_filter" model="ir.ui.view">
            <field name="name">sgr.document_category.select</field>
            <field name="model">sgr.document_category</field>
            <field name="arch" type="xml">
                <search string="Document Categories" version="7.0">
                    <group string="By Attribute">
                    <field name="type" string="Document Type"
                            />
                    <field name="name" string="Name"
                            />
                    <field name="hierachical_type" string="Type"
                            />
                    <field name="experimental_results" string="Experimiental Results"
                            />
                    <field name="show_validation_method" string="Show validation method"
                            />
                    <field name="reference" string="Reference"
                            />
                    </group>
                    <group string="By object">
                    <field name="parent_id" string="Parent Category"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_document_category_form" model="ir.ui.view">
            <field name="name">sgr.document_category.form</field>
            <field name="model">sgr.document_category</field>
            <field name="arch" type="xml">
                <form string="Document Categories" version="7.0">
                    <header>
                    </header>
                    <sheet string="Document Categories">
                     <group>
                        <field name="type"
                            />
                        <field name="name"
                            />
                        <field name="hierachical_type"
                            />
                        <field name="company_id"
                            />
                        <field name="experimental_results"
                            />
                        <field name="show_validation_method"
                            />
                        <field name="reference"
                            />
                    <field name="parent_id"
                            />
                    <field name="child_ids"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_document_category_tree" model="ir.ui.view">
            <field name="name">sgr.document_category.tree</field>
            <field name="model">sgr.document_category</field>
            <field name="arch" type="xml">
                <tree string="Document Categories"
                    >
                    <field name="complete_name"/>
                    <field name="type"
                        />
                    <field name="company_id"
                        />
                    <field name="experimental_results"
                        />
                    <field name="show_validation_method"
                        />
                    <field name="reference"
                        />
                    <field name="parent_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
