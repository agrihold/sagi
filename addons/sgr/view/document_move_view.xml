<!-- sgr.document_move -->
<!-- sgr.document_move -->
<!-- sgr.document_move -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_sgr_document_move_filter" model="ir.ui.view">
            <field name="name">sgr.document_move.select</field>
            <field name="model">sgr.document_move</field>
            <field name="arch" type="xml">
                <search string="Document Moves" version="7.0">
                    <group string="By Attribute">
                    <field name="from_partner" string="From"
                            />
                    <field name="to_partner" string="To"
                            />
                    <field name="tracking_id" string="Tracking Number"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_document_move_form" model="ir.ui.view">
            <field name="name">sgr.document_move.form</field>
            <field name="model">sgr.document_move</field>
            <field name="arch" type="xml">
                <form string="Document Moves" version="7.0">
                    <header>
                        <button name="sgn_request"
                            states="draft"
                            string="Request"
                            class="oe_highlight"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="cancelled"
                            string="To Draft"
                            />
                        <button name="sgn_send"
                            states="requested"
                            string="Send"
                            class="oe_highlight"
                            />
                        <button name="sgn_receive"
                            states="sent"
                            string="Receive"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="draft,received,requested,sent"
                            string="Cancel"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Document Moves">
                     <group>
                        <field name="from_partner"
                            />
                        <field name="to_partner"
                            />
                        <field name="from_contact"
                            />
                        <field name="to_contact"
                            />
                        <field name="requested_date"
                            />
                        <field name="sent_date"
                            />
                        <field name="received_date"
                            />
                        <field name="tracking_id"
                            />
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_document_move_tree" model="ir.ui.view">
            <field name="name">sgr.document_move.tree</field>
            <field name="model">sgr.document_move</field>
            <field name="arch" type="xml">
                <tree string="Document Moves"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('requested', 'sent', 'received'); red:state in ()"
                    >
                    <field name="from_partner"
                        />
                    <field name="to_partner"
                        />
                    <field name="requested_date"
                        />
                    <field name="sent_date"
                        />
                    <field name="received_date"
                        />
                    <field name="tracking_id"
                        />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
