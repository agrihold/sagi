<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="formulated_product_registry_report_wizard_form" model="ir.ui.view">
            <field name="name">formulated_product_registry_report_wizard_form</field>
            <field name="model">formulated_product_registry_report_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Account Summary">
                    <field name="formulated_product_id"/>
                    <button name="generate_report_formulated" string="Generate Report"
                            icon="gtk-go-forward" type="object" colspan="2"/>
                    <button string="Cancel" colspan="2" special="cancel" icon="gtk-cancel" />
                </form>
            </field>
        </record>


        <record id="action_formulated_product_registry_report_wizard" model="ir.actions.act_window">
            <field name="name">Formulated Product Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formulated_product_registry_report_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                id="menu_sgr_report"
                name="Registries"
                parent="base.menu_reporting"
                sequence="15"/>

        <menuitem
                id="menu_formulated_product_registry_report"
                name="Formulated Product Report"
                action="action_formulated_product_registry_report_wizard"
                parent="menu_sgr_report"
                sequence="10"/>
        
    </data>
</openerp>
