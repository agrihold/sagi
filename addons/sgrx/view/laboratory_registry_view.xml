<!-- sgr.laboratory_registry -->
<!-- sgr.laboratory_registry -->
<!-- sgr.registry -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="sgr.view_sgr_laboratory_registry_filter" model="ir.ui.view">
            <field name="name">sgr.laboratory_registry.select</field>
            <field name="model">sgr.laboratory_registry</field>
            <field name="arch" type="xml">
                <search string="Laboratories Registries" version="7.0">
                    <group string="By Attribute">
                    <field name="laboratory_id" string="Laboratory"
                            />
                    <field name="registry_expiration_date" string="Registry Expiration Date"
                            />
                    <field name="free_sale_number" string="Free Sale Number"
                            />
                    <field name="free_sale_expiration_date" string="Free Sale Expiration Date"
                            />
                    </group>
                    <group string="By object">
                    <field name="registry_category_id" string="Category"
                            />
                    <field name="state"/>
                    <field name="operative_id" />
                    </group>
                    <group expand="1" string="Group By...">
                        <filter string="Operative" domain="[]" context="{'group_by':'operative_id'}" />
                        <filter string="Laboratory" domain="[]" context="{'group_by':'laboratory_id'}" />
                        <filter string="State" domain="[]" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>


        <!-- FORMVIEW -->
        <record id="view_sgr_laboratory_registry_form" model="ir.ui.view">
            <field name="name">sgr.laboratory_registry.form</field>
            <field name="model">sgr.laboratory_registry</field>
            <field name="inherit_id" ref="sgr.view_sgr_laboratory_registry_form"/>               
            <field name="arch" type="xml">
                <sheet string="Laboratories Registries" position="replace"/>
                <header position="after">                    
                    <sheet string="Laboratories Registries">
                     <group>
                        <field name="type"
                        invisible="1"/>        
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="operation"
                                    />
                                <label string="Modify" attrs="{'invisible':[('operation','in',['new', 'replacement'])]}" class="oe_edit_only"/>
                                <label string="Replace" attrs="{'invisible':[('operation','in',['new', 'modification'])]}" class="oe_edit_only"/>
                                <field name="operate_id" domain="[('state','in',('draft','requested','approved')),('id','!=',id)]" attrs="{'invisible':[('operation','in',['new'])], 'required': [('operation','!=','new')]}" nolabel="1" colspan="2"/>
                                <field name="company_id" groups="base.group_multi_company"/>                                    
                                <field name="registry_category_id" domain="[('type','=',type),('company_id','=',company_id)]" on_change="onchange_registry_category(registry_category_id)" context="{'default_type': type}"/>
                            </group>
                            <group colspan="2" col="2">
                                <field name="operative_id" />
                                <field name="proxy_id" />
                                <field name="project_id" />
                                <field name="expected_date"/>
                            </group>
                            <group colspan="4" col="4">
                                <field name="laboratory_id" colspan="4"/>                
                            </group>                              
                        </group> 
                        <notebook colspan="4">                        
                            <page string="Informations">
                                <field name="information_presentation_ids"/>    
                            </page>                                                                           
                            <page string="Documents">
                                <notebook>
                                    <page string="Studies">                            
                                        <field name="study_presentation_ids"/>
                                    </page>
                                    <page string="Partner Documents">
                                        <field name="partner_document_presentation_ids"/>                                     
                                    </page>                                          
                                    <page string="Taxes">
                                        <field name="tax_ids"/>                                    
                                    </page>       
                                </notebook>
                            </page>
                            <page string="Dossier">
                                <field name="dossier_document_ids"/>                         
                            </page>    
                            <page string="Communications">
                                <field name="communication_ids"
                                    />
                            </page>      
                            <page string="Processes">
                                <field name="registry_process_ids"
                                        />
                            </page>                                                     
                            <page string="Results">
                                <group colspan="4" col="6">
                                    <field name="registry_number"/>
                                    <field name="registry_date"/>                                    
                                    <field name="registry_expiration_date"/>
                                </group>
                                <group colspan="4" col="1">
                                    <field name="publications_ids"/>            
                                    <field name="operated_by_ids" readonly="1"/>                                              
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="note"/>
                            </page>                                
                        </notebook>                        
                     </group>
                </sheet>
            </header>
            </field>
        </record>

        <!-- TREEVIEW 

        <record id="view_sgr_laboratory_registry_tree" model="ir.ui.view">
            <field name="name">sgr.laboratory_registry.tree</field>
            <field name="model">sgr.laboratory_registry</field>
            <field name="arch" type="xml">
                <tree string="Laboratories Registries"
                    >
                    <field name="type"/>
                    <field name="name"/>
                    <field name="registry_number"/>
                    <field name="operation"/>
                    <field name="partner_id"/>
                    <field name="proxy_id"/>
                    <field name="project_id"/>
                    <field name="company_id"/>
                    <field name="operate_id"/>
                </tree>
            </field>
        </record>
-->
    </data>
</openerp>
