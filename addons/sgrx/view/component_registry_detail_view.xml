        <!-- FORMVIEW -->
        <record id="view_sgr_component_registry_detail_form" model="ir.ui.view">
            <field name="name">sgr.component_registry_detail.form</field>
            <field name="model">sgr.component_registry_detail</field>
            <field name="inherit_id" ref="sgr.view_sgr_component_registry_detail_form"/>            
            <field name="arch" type="xml">
               <sheet string="Component Registry Detail" position="replace"/>
                    <header position="after">
                        <sheet string="Component Registry Detail">
                             <group colspan="4" col="4">
                                <field name="component_id" colspan="4"/>
                                <field name="component_registry_finality_ids" widget="many2many_tags"/>
                                <field name="emergency_information_id"/>
                            </group>
                            <notebook>
                                <page string="Gral Info">
                                <group colspan="4" col="4">
                                    <group colspan="2" col="1">                                
                                        <field name="formulated_product_ids">
                                            <tree>
                                                <field name="name"/>
                                            </tree>   
                                        </field>                                      
                                    </group>
                                    <group colspan="2" col="1">                                     
                                        <field name="supplier_ids">
                                            <tree>
                                                <field name="name"/>
                                            </tree>   
                                        </field>  
                                    </group>                                            
                                </group>                                               
                                <group colspan="4" col="1">                                                                
                                    <field name="packaging_ids"/>
                                </group>                                                                               
                            </page>                                                
                            <page string="CQQ">
                                <field name="cqq_ids">
                                    <tree editable="top">
                                        <field name="ingredient_id"
                                            />  
                                        <field name="main_ingredient"/>
                                        <field name="scientific_name"/>                                             
                                        <field name="ingredient_function_id"
                                            />                                                                                        
                                        <field name="declared_concentration"
                                            />
                                        <field name="min_concentration"
                                            />
                                        <field name="max_concentration"
                                            />
                                        <field name="uom_id"
                                            />
                                    </tree>
                                </field>
                            </page>
                            <page string="Uses">
                                <group colspan="4" col="1">
                                    <field name="uses_ids" nolabel="1"/>                                             
                                </group>
                            </page>    
                        </notebook>                                 
                    </sheet>
                </header>
            </field>
        </record>

        <!-- TREEVIEW 

        <record id="view_sgr_component_registry_detail_tree" model="ir.ui.view">
            <field name="name">sgr.component_registry_detail.tree</field>
            <field name="model">sgr.component_registry_detail</field>
            <field name="arch" type="xml">
                <tree string="Component Registry Detail"
                    >
                    <field name="finalidade"/>
                    <field name="component"/>
                    <field name="formulated_product_ids"/>
                    <field name="supplier_ids"/>
                    <field name="emergency_information_id"/>
                </tree>
            </field>
        </record>
-->
    </data>
