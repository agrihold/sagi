        <!-- FORMVIEW -->
        <record id="view_sgr_product_study_form" model="ir.ui.view">
            <field name="name">sgr.product_study.form</field>
            <field name="model">sgr.product_study</field>
            <field name="inherit_id" ref="sgr.view_sgr_product_study_form"/> 
            <field name="arch" type="xml">
                <sheet string="Sample Quantity" position="replace"/>
                <header position="after">
                    <sheet string="Sample Quantity">
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="study_category_id" context="{'default_type':'study'}" domain="[('type','=','study')]"/>       
                                <field name="is_gpl"/>
                                <field name="is_pretest"/>
                                <field name="term_days"/>     
                            </group>
                            <group colspan="2" col="4">
                                <field name="lang_id"
                                    widget="many2many_tags" colspan="4"/>    
                                <field name="sample_quantity" colspan="2"/>
                                <field name="sample_uom" nolabel="1"/>
                                <newline/>
                                <field name="amount"
                                    colspan="4"/>
                            </group>
                        <group colspan="2" col="1">                                                    
                            <field name="batch_number_id" domain="[('product_id','=',product_id)]" context="{'default_product_id': product_id}"/>
                        </group>  
                        <group colspan="2" col="1">
                            <field name="note"/>
                        </group> 
                    </group>                              
                    </sheet>
                </header>
            </field>
        </record>

        <!-- TREEVIEW 
        <record id="view_sgr_product_study_tree" model="ir.ui.view">
            <field name="name">sgr.product_study.tree</field>
            <field name="model">sgr.product_study</field>
            <field name="arch" type="xml">
