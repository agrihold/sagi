<!-- sgr.sample_request -->
<!-- sgr.sample_request -->
<!-- sgr.sample_request -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="sgr.view_sgr_sample_request_filter" model="ir.ui.view">
            <field name="name">sgr.sample_request.select</field>
            <field name="model">sgr.sample_request</field>
            <field name="arch" type="xml">
                <search string="Sample Request" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Reference"
                            />
                    <field name="concentration" string="Concentration"
                            />
                    <field name="concentration_uom_id" string="UOM"
                            />
                    <field name="state"/>
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_sample_request_form" model="ir.ui.view">
            <field name="name">sgr.sample_request.form</field>
            <field name="model">sgr.sample_request</field>
            <field name="inherit_id" ref="sgr.view_sgr_sample_request_form"/>            
            <field name="arch" type="xml">
                <sheet string="Sample Request" position="replace"/>
                <header position="after">
                    <sheet string="Sample Request">
                     <group colspan="4" col="4">
                        <field name="name"/>
                        <newline/>
                        <field name="product_id"
                            colspan="4"/>
                        <field name="product_in_ret_id" on_change="onchange_ret(product_in_ret_id)" colspan="4"
                            domain="[('product_id','=',product_id)]"/>                            
                        <field name="supplier_id"/>
                        <field name="location_id"/>
                        <field name="specific_batch"/>
                        <field name="batch" attrs="{'required':[('specific_batch','=','yes')],'invisible':[('specific_batch','!=','yes')]}"/>
                        <newline/>                  
                        <group colspan="4" col="4">
                            <field name="amount" colspan="2"/>
                            <!-- <field name="amount_uom_id" readonly="1"/> -->
                            <field name="amount_uom_id" nolabel="1" attrs="{'invisible':[('product_in_ret_id','!=',False)]}"/>
                            <field name="copy_amount_uom_id" nolabel="1" attrs="{'invisible':[('product_in_ret_id','=',False)]}"/>
                            <!-- <field name="amount_uom_id" nolabel="1" attrs="{'readonly':[('product_in_ret_id','=',True)]}"/> -->
                            <newline/>                           
                            <field name="ret_remaining_amount" colspan="4"  attrs="{'invisible':[('product_in_ret_id','=',False)]}"/>
                            <field name="concentration"
                                colspan="2"/>
                            <field name="concentration_uom_id"
                                nolabel="1"/>
                            <newline/>
                        </group>
                        <field name="import_license" colspan="4"/>
                        <field name="date_of_import_license"/>
                        <field name="expiration_date_of_import"/>
                        <field name="deadline"/>
                        <field name="departure"/>
                    </group>
                    <notebook>
                        <page string="Stock Moves">
                            <field name="move_ids" nolabel="1" widget="one2many"/>
                        </page>
                        <page string="Packaging">
                            <field name="packaging_ids" nolabel="1"/>
                        </page>
                        <page string="Notes">
                            <field name="note" nolabel="1"/>
                        </page>                        
                    </notebook>
                    </sheet>
                </header>
            </field>
        </record>

        <!-- TREEVIEW 

        <record id="view_sgr_sample_request_tree" model="ir.ui.view">
            <field name="name">sgr.sample_request.tree</field>
            <field name="model">sgr.sample_request</field>
            <field name="arch" type="xml">
                <tree string="Sample Request"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('requested', 'done'); red:state in ()"
                    >
                    <field name="product_id"
                        />
                    <field name="amount"
                        />
                    <field name="amount_uom_id"
                        />
                    <field name="concentration"
                        />
                    <field name="concentration_uom_id"
                        />
                    <field name="state"/>
                </tree>
            </field>
        </record>
-->
    </data>
</openerp>
