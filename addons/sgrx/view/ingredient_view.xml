        <!-- FORMVIEW -->
        <record id="view_sgr_ingredient_form" model="ir.ui.view">
            <field name="name">sgr.ingredient.form</field>
            <field name="model">sgr.ingredient</field>
            <field name="inherit_id" ref="sgr.view_sgr_ingredient_form"/>            
            <field name="arch" type="xml">
                <sheet string="Ingredients" position="replace"/>
                <header position="after">
                    <sheet string="Ingredients">
                        <group colspan="4" col="4">
                            <group colspan="4" col="6">
                                <group colspan="6" col="2">                        
                                    <field name="name"/>   
                                </group>                     
                                <group colspan="6" col="4">
                                    <field name="type"/>
                                    <field name="ingredient_group_id" domain="[('type','=',type)]" context="{'default_type': type}"/>
                                </group> 
                                <group colspan="4" col="1">
                                    <field name="common_international_name" attrs="{'required': [('type','!=','others')],'invisible': [('type', '=', 'others')]}"/>
                                    <field name="scientific_name" attrs="{'invisible': [('type', '=', 'others')]}"/>
                                </group> 
                            </group>                  
                        </group>
                        <notebook>
                            <page string="Other Info">
                                <group colspan="4" col="6">
                                    <group colspan="6" col="2">
                                        <field name="mode_of_action_ids" widget="many2many_tags" attrs="{'invisible': [('type', 'in', ['others','impurity'])]}"/>                             
                                    </group>                                                                       
                                    <group colspan="4" col="2">
                                        <field name="cas"
                                            attrs="{'invisible': [('type', '=', 'biological')]}"/>
                                        <field name="agronomic_class_id" attrs="{'required': [('type','in',['chemical','biological'])],'invisible': [('type', 'in', ['others','impurity'])]}"/>  
                                     <field name="chemical_structure" widget="image"  img_height="150" attrs="{'invisible': [('type', '=', 'biological')]}"/>
                                    </group>                           
                                    <group colspan="2" col="3">
                                        <field name="molecular_weight"
                                            attrs="{'invisible': [('type', '=', 'biological')]}"/>
                                        <field name="mol_weight_uom_id"
                                            nolabel="1" attrs="{'invisible': [('type', '=', 'biological')]}"/>
                                        <field name="density"
                                            />
                                        <field name="density_uom_id"
                                            nolabel="1"/>
                                        <field name="solubility"
                                            />
                                        <field name="solubility_uom_id"
                                            nolabel="1"/>
                                    </group>
                                    <group colspan="6" col="1">   
                                        <field name="molecular_formula"
                                            attrs="{'invisible': [('type', '=', 'biological')]}"/>
                                        <field name="note"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Names">   
                                <field name="ingredient_other_name_ids" nolabel="1">
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="ingredient_name_category_id"/>                                    
                                    </tree>        
                                </field>      
                            </page>
                            <page string="LMR">
                                <field name="lmr_ids" attrs="{'invisible': [('type', 'in', ['others','impurity'])]}"/>
                            </page>
                        </notebook>
                    </sheet>
                </header>
            </field>
        </record>

