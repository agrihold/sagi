        <!-- FORMVIEW -->
        <record id="view_sgr_study_presentation_form" model="ir.ui.view">
            <field name="name">sgr.study_presentation.form</field>
            <field name="model">sgr.study_presentation</field>
            <field name="inherit_id" ref="sgr.view_sgr_study_presentation_form"/>            
            <field name="arch" type="xml">
                <sheet position="replace"/>
                <header position="after">
                    <sheet string="Study Presentation">
                     <group>
                        <field name="document_category_id" domain="[('type','=','study')]" context="{'default_type':'study'}"/>
                        <field name="study_id" domain="[('document_category_id','=',document_category_id)]" context="{'default_document_category_id':document_category_id}"/>
                        <field name="communication_ids" widget="many2many_tags"/>   
                     </group>
                    </sheet>
                </header>
            </field>
        </record>

