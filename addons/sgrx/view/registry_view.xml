<openerp>
    <data>


        <!-- SEARCHVIEW -->
        <record id="view_sgr_registry_filter" model="ir.ui.view">
            <field name="name">sgr.registry.select</field>
            <field name="model">sgr.registry</field>
            <field name="arch" type="xml">
                <search string="Registries" version="7.0">
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->

        <record id="view_sgr_registry_form" model="ir.ui.view">
            <field name="name">sgr.registry.form</field>
            <field name="model">sgr.registry</field>
            <field name="arch" type="xml">

                <form string="Registries" version="7.0">
                    <header>
                        <button name="sgn_depreciate" states="approved" string="Depreciate" class="oe_highlight"/>
                        <button name="sgn_reject" states="requested" string="Reject"/>
                        <button name="action_wfk_set_cancelled" type="object" states="cancelled,approved,rejected,requested,depreciated" string="Cancel"/>
                        <button name="sgn_request" states="draft" string="Request" class="oe_highlight"/>
                        <button name="sgn_approve" states="requested" string="Approve" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_colors="{}"/>
                    </header>
                    <sheet string="Registries">
                     <group>
                        <field name="name"/>
                        <field name="registry_number"/>
                        <field name="type"/>
                        <field name="partner_id"/>
                        <field name="proxy_id"/>
                        <field name="operation"/>
                        <field name="company_id"/>
                        <field name="project_id"/>
                    </group>
                        <group>
                            <notebook colspan="4">
                                <page string="Document">
                                    <field name="registry_revision_ids"  colspan="4" mode="tree">
                                        <tree>
                                            <field name="state"/>
                                            <field name="revision"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="History">
                                    <group>
                                        <field name="publications_ids"/>
                                        <field name="operate_id"/>
                                        <field name="state_registry_ids"/>
                                        <field name="operated_by_ids"/>
                                        <field name="communication_ids"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sgr_registry_tree" model="ir.ui.view">
            <field name="name">sgr.registry.tree</field>
            <field name="model">sgr.registry</field>
            <field name="arch" type="xml">
                <tree string="Registries"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('cancelled', 'requested', 'approved'); red:state in ()"
                    >
                    <field name="name"/>
                    <field name="registry_number"/>
                    <field name="type"/>
                    <field name="partner_id"/>
                    <field name="proxy_id"/>
                    <field name="operation"/>
                    <field name="company_id"/>
                    <field name="project_id"/>
                    <field name="operate_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- WINDOWACTION -->
        <record id="action_sgr_registry_form" model="ir.actions.act_window">
            <field name="name">Registries</field>
            <field name="res_model">sgr.registry</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sgr_registry_filter"/>
            <field name="help"></field>
        </record>

    </data>
</openerp>
