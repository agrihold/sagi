        <!-- FORMVIEW -->
        <record id="view_sgr_packaging_form" model="ir.ui.view">
            <field name="name">sgr.packaging.form</field>
            <field name="model">sgr.packaging</field>
            <field name="inherit_id" ref="sgr.view_sgr_packaging_form"/>            
            <field name="arch" type="xml">
                <sheet string="Packagings" position="replace"/>
                <header position="after">
                    <sheet string="Packagings">
                     <group colspan="4" col="4">
                        <group string="Internal" colspan="2" col="2">                         
                            <field name="internal_packaging_type_id" string="Type"/>
                            <field name="internal_packaging_material_id" string="Material"/>
                            <field name="uom_id"/>                           
                            <field name="packaging_capacity_ids" string="Capacities" 
                            context="{'default_uom_id': uom_id}"
                            domain="[('uom_id','=',uom_id)]">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>  
                        </group>                                         
                        <group string="External" colspan="2" col="2">
                            <field name="external_packaging_type_id" string="Type"/>
                            <field name="external_packaging_material_id" string="Material"/>                            
                            <field name="external_quantity"/>
                        </group>                     
                    </group>
                    </sheet>
                </header>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="sgr.view_sgr_packaging_tree" model="ir.ui.view">
            <field name="name">sgr.packaging.tree</field>
            <field name="model">sgr.packaging</field>            
            <field name="arch" type="xml">
                <tree string="Packagings">
                    <field name="internal_packaging_type_id"/>
                    <field name="internal_packaging_material_id"/>
                    <field name="uom_id"/>                      
                    <field name="packaging_capacity_ids" widget="many2many_tags" string="Capacities"/>                      
                    <field name="external_packaging_type_id"/>
                    <field name="external_packaging_material_id" string="Material"/>    
                    <field name="external_quantity"/>                                     
                </tree>
            </field>
        </record>

    </data>
</openerp>
