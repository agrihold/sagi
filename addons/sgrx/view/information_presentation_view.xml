        <!-- FORMVIEW -->
        <record id="view_sgr_information_presentation_form" model="ir.ui.view">
            <field name="name">sgr.information_presentation.form</field>
            <field name="model">sgr.information_presentation</field>
            <field name="inherit_id" ref="sgr.view_sgr_information_presentation_form"/>               
            <field name="arch" type="xml">
                <sheet string="Informations Presentation" position="replace"/>
                <header position="after">
                    <sheet string="Informations Presentation">
                         <group>
                            <field name="information_category_id"
                                />
                            <field name="parent_information_id" domain="[('information_category_id','=',information_category_id),('state','not in',['cancelled', 'depreciated'])]" context="{'default_information_category_id': information_category_id}"/>
                            <group colspan="4" col="1">
                                <field name="text"
                                    attrs="{'invisible': [('parent_information_id', '!=', False)]}"/>                            
                            </group>
                         </group>
                    </sheet>
                </header>
            </field>
        </record>

