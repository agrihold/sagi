        <record id="sgr.view_sgr_information_category_form" model="ir.ui.view">
            <field name="name">sgr.information_category.form</field>
            <field name="model">sgr.information_category</field>
            <field name="arch" type="xml">
                <form string="Information Categories" version="7.0">
                    <header>
                    </header>
                    <sheet string="Information Categories">
                     <group>
                        <field name="name"
                            />
                        <field name="parent_id"
                            />   
                        <field name="hierachical_type"/>                               
                        <field name="company_id"
                            groups="base.group_multi_company" />                            
                        <notebook>
                            <page string="Child Categories">
                                <field name="child_ids"
                                        />          
                            </page>
                            <page string="Header">
                                <field name="header"
                                    />         
                            </page>
                            <page string="Footer">
                                <field name="footer"
                                    />         
                            </page> 
                        </notebook>                                                       
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

