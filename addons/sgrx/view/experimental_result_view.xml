<!-- sgr.experimental_result -->
<openerp>
    <data>

        <!-- SEARCHVIEW -->

        <!-- FORMVIEW -->
        <record id="sgr.view_sgr_experimental_result_form" model="ir.ui.view">
            <field name="name">sgr.experimental_result.form</field>
            <field name="model">sgr.experimental_result</field>
            <field name="arch" type="xml">
                <form string="Experimental Results" version="7.0">
                    <header>
                    </header>
                    <sheet string="Experimental Results">
                        <field name="study_experimental_results" invisible="True"/>
                     <group colspan="4" col="4">
                        <field name="crop_id"/>
                        <field name="target_pest_id" attrs="{'invisible': [('study_experimental_results', '=', 'residue')]}"/>
                        <field name="city"/>
                        <field name="number_of_applications" attrs="{'invisible': [('study_experimental_results', '=', 'residue')]}"/>
                        <field name="volume" attrs="{'invisible': [('study_experimental_results', '=', 'residue')]}"/>
                        <field name="volume_uom_id" attrs="{'invisible': [('study_experimental_results', '=', 'residue')]}"/>
                        <field name="doses" attrs="{'invisible': [('study_experimental_results', '=', 'residue')]}"/>
                        <field name="doses_uom_id" attrs="{'invisible': [('study_experimental_results', '=', 'residue')]}"/>
                        <field name="result" colspan="4" />
                        <field name="note" colspan="4"/>
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW 

        <record id="sgr.view_sgr_experimental_result_tree" model="ir.ui.view">
            <field name="name">sgr.experimental_result.tree</field>
            <field name="model">sgr.experimental_result</field>
            <field name="arch" type="xml">
                <tree string="Experimental Results">
                    <field name="crop_id"/>
                    <field name="target_pest_id"/>                                     
                    <field name="city"/>
                    <field name="volume"/>
                    <field name="volume_uom_id"/>
                    <field name="number_of_applications"/>
                    <field name="result"/>
                </tree>
            </field>
        </record>
-->
    </data>
</openerp>
