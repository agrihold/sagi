<!-- sgr.component_registry -->
<!-- sgr.component_registry -->
<!-- sgr.registry -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="sgr.view_sgr_component_registry_filter" model="ir.ui.view">
            <field name="name">sgr.component_registry.select</field>
            <field name="model">sgr.component_registry</field>
            <field name="arch" type="xml">
                <search string="Components Registries" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Petition number/Reference"
                            />
                    <field name="registry_expiration_date" string="Registry Expiration Date"
                            />
                    <field name="free_sale_number" string="Free Sale Number"
                            />
                    <field name="free_sale_expiration_date" string="Free Sale Expiration Date"
                            />
                    </group>
                    <group string="By object">
                    <field name="component_registry_detail_ids" string="Component Products"
                            />
                    <field name="registry_category_id" string="Category"
                            />
                    <field name="formulated_product_ids"/>
                    <field name="state"/>
                    <field name="operative_id" />
                    </group>
                    <group expand="1" string="Group By...">
                        <filter string="Operative" domain="[]" context="{'group_by':'operative_id'}" />
                        <filter string="State" domain="[]" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>


        <!-- FORMVIEW -->
        <record id="view_sgr_component_registry_form" model="ir.ui.view">
            <field name="name">sgr.component_registry.form</field>
            <field name="model">sgr.component_registry</field>
            <field name="inherit_id" ref="sgr.view_sgr_component_registry_form"/>                         
            <field name="arch" type="xml">
                <sheet string="Components Registries" position="replace"/>
                <header position="after">
                    <sheet string="Components Registries">
                    <field name="type"
                        invisible="1"/>        
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="company_id" groups="base.group_multi_company"/>                                    
                                <field name="registry_category_id" domain="[('type','=',type),('company_id','=',company_id)]" on_change="onchange_registry_category(registry_category_id)" context="{'default_type': type}"/>
                            </group>
                            <group colspan="2" col="2">
                                <field name="operative_id" />
                                <field name="proxy_id" />
                                <field name="project_id" />
                                <field name="expected_date"/>
                            </group>
                            <group colspan="4" col="4">
                                <field name="name"
                                    colspan="4"/>
<!--                                <field name="reference"
                                    />          REFERENCE FUE REEMPLAZADO POR NAME           -->      
                            </group>                              
                        </group> 
                        <notebook>
                            <page string="Components">
                                <group colspan="4" col="4">
                                    <field name="component_registry_detail_ids" nolabel="1">
                                        <tree>
                                            <field name="component_id"/>
                                            <field name="component_registry_finality_ids"/>     
                                            <field name="formulated_product_ids"/>
                                            <field name="supplier_ids"/>
                                            <field name="emergency_information_id"/>
                                        </tree>
                                    </field>
                                </group>                                                                         
                            </page>                      
                            <page string="Informations">
                                <field name="information_presentation_ids"
                                    />                            
                            </page>                                                       
                            <page string="Documents">
                                <notebook>
                                    <page string="Studies">                            
                                        <field name="study_presentation_ids"/>
                                    </page>
                                    <page string="Partner Documents">
                                        <field name="partner_document_presentation_ids"/>                                     
                                    </page>                                          
                                    <page string="Taxes">
                                        <field name="tax_ids"/>                                    
                                    </page>       
                                </notebook>
                            </page>
                            <page string="Dossier">
                                <field name="dossier_document_ids"/>                         
                            </page>  

                            <page string="Communications">
                                <field name="communication_ids"
                                    />
                            </page>             
                            <page string="Processes">
                                <field name="registry_process_ids"
                                        />
                            </page>                                               
                            <page string="Results">
                                <group colspan="4" col="6">
                                    <field name="registry_number"/>
                                    <field name="registry_date"/>                                    
                                    <field name="registry_expiration_date"/>
                                </group>
                                <group colspan="4" col="1">
                                    <field name="publications_ids"/>                                                      
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="note"/>
                            </page>                            
                        </notebook>                        
                    </sheet>
                </header>
            </field>
        </record>

        <record id="sgr.view_sgr_component_registry_tree" model="ir.ui.view">
            <field name="name">sgr.component_registry.tree</field>
            <field name="model">sgr.component_registry</field>
            <field name="arch" type="xml">
                <tree string="Components Registries"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('requested', 'depreciated', 'approved', 'rejected'); red:state in ()"
                    >
                    <field name="name"/>
                    <field name="formulated_product_ids"/>
                    <field name="state" />
                    <field name="operative_id" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
