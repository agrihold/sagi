<!-- sgr.proposal -->
<!-- sgr.proposal -->
<!-- sgr.proposal -->
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="sgr.view_sgr_proposal_filter" model="ir.ui.view">
            <field name="name">sgr.proposal.select</field>
            <field name="model">sgr.proposal</field>
            <field name="arch" type="xml">
                <search string="Proposals" version="7.0">
                    <group string="By Attribute">
                    <field name="type" string="Type"
                            />
                    <field name="laboratory_id" string="Laboratory"
                            />
                    <field name="name" string="Reference"
                            />
                    <field name="state"/>
                    </group>
                    <group string="By object">
                    <field name="contract_id" string="Contract"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sgr_proposal_form" model="ir.ui.view">
            <field name="name">sgr.proposal.form</field>
            <field name="model">sgr.proposal</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="sgr.view_sgr_proposal_form"/>            
            <field name="arch" type="xml">
                <sheet string="Proposals" position="replace"/>
                <header position="after">
                    <sheet string="Proposals">
                        <group colspan="4" col="4">
                            <field name="laboratory_id"
                                />  
                            <field name="analytic_line_id"
                                />                                                      
                            <field name="type"
                                on_change="onchange_contract_id(type, contract_id)"
                                />
                            <field name="contract_id"
                                attrs="{'invisible': [('type','!=','by_contract')],'required':[('type','=','by_contract')]}"
                                context="{'default_laboratory_id': laboratory_id}"
                                domain="[('laboratory_id','=',laboratory_id),('state','=','approved')]"
                                on_change="onchange_contract_id(type, contract_id)"/>
                            <field name="name"
                                />       
<!--                            <field name="document_id"
                                />-->
                            <field name="currency_id"
                                attrs="{'readonly': ['|',('state','not in',['draft','requested','received']),('type','=','by_contract')]}"/>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="proposal_product_ids" nolabel="1">
                                </field>    
                                <group>
                                    <field name="amount"/>
                                </group>
                            </page>                                            
                            <page string="Other Info">
                                <group colspan="4" col="4">                       
                                    <field name="company_id"
                                        groups="base.group_multi_company" colspan="2"/>
                                </group>
                                <group colspan="4" col="1">
                                    <field name="sponsor_ids"
                                        />
                                </group>   
                            </page>
                        </notebook>                                                        
                    </sheet>
                </header>
            </field>
        </record>




    </data>
</openerp>
