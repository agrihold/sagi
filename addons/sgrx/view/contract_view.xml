<!-- sgr.contract -->
<!-- sgr.contract -->
<!-- sgr.contract -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="sgr.view_sgr_contract_filter" model="ir.ui.view">
            <field name="name">sgr.contract.select</field>
            <field name="model">sgr.contract</field>
            <field name="arch" type="xml">
                <search string="Contracts" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Reference"
                            />
                    <field name="laboratory_id" string="Laboratory"/>
                    <field name="state"/>
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>


        <!-- FORMVIEW -->
        <record id="view_sgr_contract_form" model="ir.ui.view">
            <field name="name">sgr.contract.form</field>
            <field name="model">sgr.contract</field>
            <field name="inherit_id" ref="sgr.view_sgr_contract_form"/>            
            <field name="arch" type="xml">
                <sheet string="Contracts" position="replace"/>
                <header position="after">
                    <sheet string="Contracts">
                        <group colspan="4" col="4">
                            <field name="laboratory_id"
                                />  
                            <field name="analytic_account_id"
                                />                                                      
                            <field name="name"
                                />
                            <field name="date"
                                />
                        </group>
                        <notebook>
                            <page string="Contract Details">
                                <group colspan="4" col="4">
                                    <field name="amount" colspan="2"/>
                                    <field name="currency_id" colspan="2"/>
                                    <field name="payment_term_id" colspan="2"/>
<!--                                    <field name="document_id" colspan="2"/>   -->
                                </group>
                                <group colspan="4" col="1">
                                    <field name="payment_information"/>
                                </group>
                            </page>
                            <page string="Proposals">
                                <field name="proposal_ids"
                                            nolabel="1"/>
                            </page>                                            
                            <page string="Other Info">
                                <group colspan="4" col="4">                       
                                    <field name="company_id"
                                        groups="base.group_multi_company" colspan="2"/>
                                </group>
                                <group colspan="4" col="1">
                                    <field name="observations"
                                        />
                                </group>   
                            </page>
                            <page string="Moves">
                                <field name="line_ids" nolabel="1"/>
                            </page>
                        </notebook>                                                        

                    </sheet>
                </header>                       
            </field>
        </record>

     

    </data>
</openerp>
