<!-- sgr.proposal_product -->
<openerp>
    <data>


        <!-- FORMVIEW -->
        <record id="view_sgr_proposal_product_form" model="ir.ui.view">
            <field name="name">sgr.proposal_product.form</field>
            <field name="model">sgr.proposal_product</field>
            <field name="inherit_id" ref="sgr.view_sgr_proposal_product_form"/>                
            <field name="arch" type="xml">
                <sheet string="Proposal Products" position="replace"/>
                <header position="after">
                    <sheet string="Proposal Products">
                     <group>
                        <field name="product_id"/>
                        <group colspan="4" col="1">
                            <field name="product_study_ids" context="{'product_id': product_id}">
                            </field>
                        </group>
                        <field name="sub_total"/>
                     </group>
                    </sheet>
                </header>
            </field>
        </record>



    </data>
</openerp>
