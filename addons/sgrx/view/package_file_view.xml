        <!-- FORMVIEW -->
        <record id="view_sgr_package_file_form" model="ir.ui.view">
            <field name="name">sgr.package_file.form</field>
            <field name="model">sgr.package_file</field>
            <field name="inherit_id" ref="sgr.view_sgr_package_file_form"/>              
            <field name="arch" type="xml">
                <sheet string="Files" position="replace"/>
                <header position="after">
                    <sheet string="Files">         
                        <label for="name" class="oe_edit_only"/>                   
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="reference"/>
                                <field name="lang_ids" widget="many2many_tags" placeholder="Languages..."/>

                            </group>               
                            <group colspan="2" col="1"> 
                                <field name="attachment_ids" widget="one2many">
                                    <tree>
                                        <field name="name"/>
                                        <field name="datas"/>
                                    </tree>
                                </field>
                            </group>               
                        </group>                          
                        <notebook>
                            <page string="Other Info">
                                    <group colspan="4" col="4">
                                    <field name="finish_date"/>
                                    <field name="consularization_date"/>
                                    <field name="translation_date"/>
                                    <field name="authentication_date"/>
                                    <field name="number_of_pages"/>
                                    <field name="company_id" groups="base.group_multi_company"/>    
                                </group>                            
                            </page>
                            <page string="Documents">
                                <field name="document_ids"/>
                            </page>
                            <page string="Doc Moves">
                                <field name="move_ids"/>                            
                            </page>                               
                        </notebook>
                    </sheet>
                </header>
            </field>
        </record>

        <!-- TREEVIEW 

        <record id="view_sgr_package_file_tree" model="ir.ui.view">
            <field name="name">sgr.package_file.tree</field>
