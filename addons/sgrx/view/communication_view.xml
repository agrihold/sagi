<!-- COMMUNICACIONS DE REGISTROS -->
        <!-- FORMVIEW -->
        <record id="view_sgr_communication_form" model="ir.ui.view">
            <field name="name">sgr.communication.form</field>
            <field name="model">sgr.communication</field>
            <field name="inherit_id" ref="sgr.view_sgr_communication_form"/>             
            <field name="arch" type="xml">
                <sheet string="Communications" position="replace"/>
                    <header position="after">
                    <sheet string="Communications" >
                         <group colspan="4" col="4" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <field name="date"
                                />
                            <newline/>    
                            <field name="direction" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                />
                            <field name="term_date"
                                attrs="{'invisible': [('direction', '!=', 'in')]}"	/>
                            <field name="communication_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="government_agency_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="name" />
                            <field name="official_letter_id"
                                readonly="1"/>
                            <field name="registry_id" required="False" invisible="1"/>
                         </group>                                
                        <notebook>
                            <page string="Documents" attrs="{'invisible': [('direction', '!=', 'out')]}">
                                <notebook>
                                    <page string="Studies">                            
                                        <field name="study_presentation_ids" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>
                                    </page>
                                    <page string="Partner Documents">
                                        <field name="partner_document_presentation_ids" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>                                     
                                    </page>                                          
                                    <page string="Taxes">
                                        <field name="tax_ids" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>                                    
                                    </page>       
                                    <page string="Dossier Documents">
                                        <field name="dossier_document_ids" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>                                        
                                    </page>
                                </notebook>
                            </page>

                            <page string="Other Info">
                                <group colspan="4" col="2">
                                    <field name="company_id"
                                    groups="base.group_multi_company" readonly="0"/>
                                </group>
                                <group colspan="4" col="1">
                                    <field name="note"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </header>
            </field>
        </record>

<!-- COMMUNICACIONS DE OFFICIAL LETTERS -->
        <!-- FORMVIEW -->        
        <record id="view_sgr_communication_official_letter_form" model="ir.ui.view">
            <field name="name">sgr.communication.official.letter.form</field>
            <field name="model">sgr.communication</field>
            <field name="priority" eval="90"/>            
            <field name="arch" type="xml">       
                <form string="Communications">
                            <field name="state" invisible="1"/>
                            <field name="direction"
                                invisible="1"/>       
                            <field name="official_letter_id"
                                invisible="1"/>         
                            <field name="government_agency_id" invisible="1"/>
                         <group colspan="4" col="2">
                            <field name="date"
                                />
                            <field name="term_date"
                                attrs="{'invisible': [('direction', '!=', 'in')]}"	/>
                            <field name="communication_type_id"/>
                           
                            <field name="name"/>
                            <field name="registry_id"/>
                         </group>                                
                        <notebook>
                            <page string="Documents" attrs="{'invisible': [('direction', '!=', 'out')]}">
                                <notebook>
                                    <page string="Studies">                            
                                        <field name="study_presentation_ids" readonly="1" nolabel="1" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>
                                    </page>
                                    <page string="Partner Documents">
                                        <field name="partner_document_presentation_ids" readonly="1" nolabel="1" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>                                     
                                    </page>                                          
                                    <page string="Taxes">
                                        <field name="tax_ids" readonly="1" nolabel="1" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>                                    
                                    </page>       
                                    <page string="Dossier Documents">
                                        <field name="dossier_document_ids" readonly="1" nolabel="1" domain="[('registry_id','=',registry_id), ('state','=','approved')]"/>                                        
                                    </page>
                                </notebook>
                            </page>
                            <page string="Other Info">
                                <group colspan="4" col="2">
                                    <field name="company_id" groups="base.group_multi_company"
                                    />
                                </group>
                                <group colspan="4" col="1">
                                    <field name="note"/>
                                </group>
                            </page>  
                        </notebook>              
                </form>
            </field>
        </record>


        <!-- TREEVIEW -->

        <record id="view_sgr_communication_official_letter_tree" model="ir.ui.view">
            <field name="name">sgr.communication.official.letter.tree</field>
            <field name="model">sgr.communication</field>
            <field name="priority" eval="90"/>              
            <field name="arch" type="xml">
                <tree string="Communications"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('resolving_request', 'sent'); red:state in ()"
                    >
                    <field name="date"/>
                    <field name="name"/>
<!--                    <field name="government_agency_id"/> -->
                    <field name="term_date"/>
<!--                    <field name="official_letter_id"/>-->
                    <field name="communication_type_id"/>
                    <field name="registry_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
