                     <group>
                        <field name="type"/>
                        <field name="name"
                            />
                        <field name="reference"
                            />
                    <field name="hierachical_type"/>
                        <field name="company_id"
                            groups="base.group_multi_company"/>
                    <field name="parent_id"
                            domain="[('type','=',type),('company_id','=',company_id)]"
                            context="{'default_type':type}"/>
                    <field name="experimental_results"/>
                    <field name="show_validation_method"/>
                    <field name="child_ids"
                            domain="[('type','=',type),('company_id','=',company_id)]"
                            context="{'default_type':type}"/>                    
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

