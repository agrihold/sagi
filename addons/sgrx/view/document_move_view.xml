        <!-- FORMVIEW -->
        <record id="view_sgr_document_move_form" model="ir.ui.view">
            <field name="name">sgr.document_move.form</field>
            <field name="model">sgr.document_move</field>
            <field name="inherit_id" ref="sgr.view_sgr_document_move_form"/>              
            <field name="arch" type="xml">
                <sheet string="Document Moves" position="replace"/>
                <header position="after">              
                    <sheet string="Document Moves">
                         <group colspan="4" col="4">
                            <field name="from_partner"
                                />
                            <field name="from_contact"
                                string="Contact"
                                context="{'default_is_company':False,'default_parent_id':from_partner}"
                                domain="[('is_company','=',False),('parent_id','=',from_partner)]"/>
                            <field name="to_partner"
                                />
                            <field name="to_contact"
                                string="Contact"
                                context="{'default_is_company':False,'default_parent_id':to_partner}"
                                domain="[('is_company','=',False),('parent_id','=',to_partner)]"/>
                            <field name="requested_date"
                                />
                            <field name="sent_date"
                                />
                            <field name="received_date"
                                />
                            <field name="tracking_id"
                                />
                         </group>
                    </sheet>
                </header>
            </field>
        </record>

