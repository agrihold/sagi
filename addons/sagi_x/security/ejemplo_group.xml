    <data>
    
    <record model="ir.rule" id="npp_public_members_rule">
        <field name="name">NPP Public Members</field>
        <field name="model_id" ref="sagi.model_sagi_new_product_project"/>
        <field name="groups" eval="[(4,ref('sagi.group_user'))]"/>   
        <field name="domain_force">['|','|',('user_id','=',user.id),('privacy_visibility','in',[False,'public']),('message_follower_ids','in',[user.partner_id.id])]</field>
    </record>

    <record model="ir.rule" id="npp_manager">
        <field name="name">NPP Manager</field>
        <field name="model_id" ref="sagi.model_sagi_new_product_project"/>
        <field name="groups" eval="[(4,ref('sagi.group_manager'))]"/>   
        <field name="domain_force">[(1,'=',1)]</field>
    </record>    

